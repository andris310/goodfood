
<div data-role="page">

  <%= render 'menu' %>

  <div data-role="content">

    <div id='menu-panel'>
        <a href="#nav-panel" class="box-shadow-menu" title="Navigation"><span id='menu-link'></span></a>
    </div>

    <div class="content">
      <h1>GoodFood</h1>
      <div id="near">
        <% if signed_in? %>
          <span class='hey-user'>Hey, <%= current_user.name %></span>
          <br/>
          <span class='hey-user'>Hungry?</span>
        <% else %>
          <span class='four-stars'>Only Places with Four Stars or Higher!</span>
        <% end %>
        <p>You are near:</p>
      </div>

      <div id="geo-location">
        <span id="street-num"></span>
        <span id="street-name"></span>
        <span id="city-name"></span>
      </div>
  <!-- This form gets the Geocoder object with the address entered in the form -->
      <form id="address_search" action='/results' data-transition="pop" method='get'>
        <button id="submit">Find Good Food</button>
      </form>


    <!-- <span id="unhide_address"><span class='search search-icon'></span>Different Address</span> -->

      <span id="unhide_address"><p><span class='search search-icon'></span>Different Address</p></span>
      <div class="hide">
        <%= render 'autocomplete' %>
      </div>

      <ul id='bottom-list'>
        <% if signed_in? %>
          <li><a href="/sign_out" data-ajax="false">Sign Out</a></li>
        <% else %>
          <li><a href="/login" data-rel="dialog" data-transition="flip">Sign In</a></li>
        <% end %>
        <li id="divider"> | </li>
        <li><a href="/about" data-ajax="false">About</a></li>
      </ul>
    </div>
  </div>
</div>
